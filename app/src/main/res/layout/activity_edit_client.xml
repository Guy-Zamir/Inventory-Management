<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".Activities.EditActivities.EditClient">

    <ProgressBar
        android:id="@+id/login_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="200dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tvLoad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_horizontal"
        android:text="טוען..."
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivClientDelete"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:layout_weight="3"
                android:background="@drawable/buttons"
                android:foregroundGravity="center"
                android:outlineAmbientShadowColor="@color/colorPrimary"
                android:outlineSpotShadowColor="@color/colorPrimaryDark"
                app:srcCompat="@drawable/delete_icon" />

            <ImageView
                android:id="@+id/ivClientHome"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:layout_weight="3"
                android:background="@drawable/buttons"
                android:foregroundGravity="center"
                app:srcCompat="@drawable/home_icon" />

            <ImageView
                android:id="@+id/ivClientEdit"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:layout_weight="3"
                android:background="@drawable/buttons"
                android:foregroundGravity="center"
                android:outlineAmbientShadowColor="@color/colorPrimary"
                android:outlineSpotShadowColor="@color/colorPrimaryDark"
                app:srcCompat="@drawable/edit_icon" />

            <ImageView
                android:id="@+id/ivClientDetails"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:layout_weight="3"
                android:background="@drawable/buttons"
                android:foregroundGravity="center"
                android:outlineAmbientShadowColor="@color/colorPrimary"
                android:outlineSpotShadowColor="@color/colorPrimaryDark"
                app:srcCompat="@drawable/details_icon" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llClientEdit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="375dp"
                android:layout_height="55dp"
                android:layout_gravity="center|center_horizontal|center_vertical"
                android:layout_marginTop="18dp"
                android:gravity="center|center_horizontal|center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvClientDetailsName"
                    android:layout_width="275dp"
                    android:layout_height="37dp"
                    android:layout_weight="1"
                    android:gravity="bottom|center|center_horizontal|center_vertical"
                    android:text="שם הלקוח:"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/etClientDetailsName"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="bottom"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:gravity="start"
                    android:inputType="textPersonName" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="375dp"
                android:layout_height="50dp"
                android:layout_gravity="center|center_horizontal|center_vertical"
                android:layout_marginTop="18dp"
                android:gravity="center|center_horizontal|center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvClientDetailsAddress"
                    android:layout_width="275dp"
                    android:layout_height="37dp"
                    android:layout_weight="1"
                    android:gravity="bottom|center|center_horizontal|center_vertical"
                    android:text="כתובת:"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/etClientDetailsAddress"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="bottom"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:gravity="start"
                    android:inputType="textPersonName" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="375dp"
                android:layout_height="50dp"
                android:layout_gravity="center|center_horizontal|center_vertical"
                android:layout_marginTop="18dp"
                android:gravity="center|center_horizontal|center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvClientDetailsPhone"
                    android:layout_width="275dp"
                    android:layout_height="37dp"
                    android:layout_weight="1"
                    android:gravity="bottom|center|center_horizontal|center_vertical"
                    android:text="טלפון נייד:"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/etClientDetailsPhone"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="bottom"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:gravity="start"
                    android:inputType="numberDecimal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="375dp"
                android:layout_height="50dp"
                android:layout_gravity="center|center_horizontal|center_vertical"
                android:layout_marginTop="18dp"
                android:gravity="center|center_horizontal|center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvClientDetailsInsidePhone"
                    android:layout_width="275dp"
                    android:layout_height="37dp"
                    android:layout_weight="1"
                    android:gravity="bottom|center|center_horizontal|center_vertical"
                    android:text="טלפון פנימי:"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/etClientDetailsInsidePhone"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="bottom"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:gravity="start"
                    android:inputType="numberDecimal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="375dp"
                android:layout_height="50dp"
                android:layout_gravity="center|center_horizontal|center_vertical"
                android:layout_marginTop="18dp"
                android:gravity="center|center_horizontal|center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvClientDetailsFax"
                    android:layout_width="275dp"
                    android:layout_height="37dp"
                    android:layout_weight="1"
                    android:gravity="bottom|center|center_horizontal|center_vertical"
                    android:text="פקס:"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/etClientDetailsFax"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="bottom"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:gravity="start"
                    android:inputType="numberDecimal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="375dp"
                android:layout_height="50dp"
                android:layout_gravity="center|center_horizontal|center_vertical"
                android:layout_marginTop="18dp"
                android:gravity="center|center_horizontal|center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvClientDetailsWebSite"
                    android:layout_width="275dp"
                    android:layout_height="37dp"
                    android:layout_weight="1"
                    android:gravity="bottom|center|center_horizontal|center_vertical"
                    android:text="אתר אינטרנט:"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/etClientDetailsWebSite"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="bottom"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:gravity="start"
                    android:inputType="numberDecimal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="375dp"
                android:layout_height="50dp"
                android:layout_gravity="center|center_horizontal|center_vertical"
                android:layout_marginTop="18dp"
                android:gravity="center|center_horizontal|center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvClientDetailsDetails"
                    android:layout_width="275dp"
                    android:layout_height="37dp"
                    android:layout_weight="1"
                    android:gravity="bottom|center|center_horizontal|center_vertical"
                    android:text="פרטים נוספים:"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/etClientDetailsDetails"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="bottom"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:gravity="start"
                    android:inputType="numberDecimal" />
            </LinearLayout>

            <Button
                android:id="@+id/btnClientEditSubmit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="0"
                android:background="@drawable/buttons"
                android:clickable="true"
                android:text="אשר"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>