<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SaleActivity">

    <Button
        android:id="@+id/btnSaleHeader"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center|center_horizontal|center_vertical"
        android:layout_marginTop="15dp"
        android:background="@color/colorPrimary"
        android:gravity="center|center_horizontal|center_vertical"
        android:text="מכירה חדשה"
        android:textColor="#ffffff"
        android:textSize="22sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etSaleDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:ems="10"
        android:gravity="center_horizontal|center_vertical"
        android:hint="תאריך מכירה"
        android:inputType="date" />

    <EditText
        android:id="@+id/etSaleCompany"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:ems="10"
        android:gravity="center_horizontal|center_vertical"
        android:hint="חברה"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/etSaleID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:ems="10"
        android:gravity="center_horizontal|center_vertical"
        android:hint="מספר חשבונית"
        android:inputType="number" />

    <EditText
        android:id="@+id/etSaleSum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:ems="10"
        android:gravity="center_horizontal|center_vertical"
        android:hint="סכום המכירה"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/btnSaleSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:layout_weight="0"
        android:background="@color/colorPrimary"
        android:text="אשר"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold" />

</LinearLayout>