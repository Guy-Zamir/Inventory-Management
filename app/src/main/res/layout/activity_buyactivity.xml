<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BuyActivity">

    <Button
        android:id="@+id/btnBuyHeader"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center|center_horizontal|center_vertical"
        android:layout_marginTop="15dp"
        android:background="@color/colorPrimary"
        android:gravity="center|center_horizontal|center_vertical"
        android:text="קנייה חדשה"
        android:textColor="#ffffff"
        android:textSize="22sp"
        android:textStyle="bold" />

    <DatePicker
        android:id="@+id/dpBuyDate"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:calendarViewShown="false"
        android:datePickerMode="spinner"
        android:gravity="center|center_horizontal|center_vertical" />

    <EditText
        android:id="@+id/etBuySupplier"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:ems="10"
        android:gravity="center_horizontal|center_vertical"
        android:hint="שם הספק"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/etBuyID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:ems="10"
        android:gravity="center_horizontal|center_vertical"
        android:hint="מספר אסמכתא"
        android:inputType="number" />

    <EditText
        android:id="@+id/etBuyKaratPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:ems="10"
        android:gravity="center_horizontal|center_vertical"
        android:hint="מחיר לקראט"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/etBuyKaratWeight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:ems="10"
        android:gravity="center_horizontal|center_vertical"
        android:hint="משקל החבילה"
        android:inputType="numberDecimal" />

    <CheckBox
        android:id="@+id/cbBuyPolish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="40dp"
        android:gravity="center_horizontal|center_vertical"
        android:scrollbarSize="6sp"
        android:text="מלוטש"
        android:textSize="20sp" />

    <CheckBox
        android:id="@+id/cbBuyDone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="40dp"
        android:gravity="center_horizontal|center_vertical"
        android:scrollbarSize="6sp"
        android:text="סרייה גמורה"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/etBuyDoneWeight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:ems="10"
        android:gravity="center_horizontal|center_vertical"
        android:hint="משקל אחרי עבודה"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/etBuyWage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:ems="10"
        android:gravity="center_horizontal|center_vertical"
        android:hint="שכר עבודה"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/btnBuySubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        android:layout_weight="0"
        android:background="@color/colorPrimary"
        android:text="אשר"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold" />

</LinearLayout>