<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".Activities.NewActivities.NewSupplier">

    <ProgressBar
        android:id="@+id/login_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="200dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tvLoad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_horizontal"
        android:text="טוען..."
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_weight="0"
            app:srcCompat="@drawable/register_icon" />

        <EditText
            android:id="@+id/etNewSupplierName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="10dp"
            android:ems="10"
            android:gravity="center_horizontal|center_vertical"
            android:hint="שם"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/etNewSupplierLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="10dp"
            android:ems="10"
            android:gravity="center_horizontal|center_vertical"
            android:hint="כתובת"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/etNewSupplierPhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="10dp"
            android:ems="10"
            android:gravity="center_horizontal|center_vertical"
            android:hint="טלפון"
            android:inputType="number" />

        <EditText
            android:id="@+id/etNewSupplierInsidePhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="10dp"
            android:ems="10"
            android:gravity="center_horizontal|center_vertical"
            android:hint="טלפון פנימי"
            android:inputType="number" />

        <EditText
            android:id="@+id/etNewSupplierFax"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="10dp"
            android:ems="10"
            android:gravity="center_horizontal|center_vertical"
            android:hint="פקס"
            android:inputType="number" />

        <EditText
            android:id="@+id/etNewSupplierWebsite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="10dp"
            android:ems="10"
            android:gravity="center_horizontal|center_vertical"
            android:hint="כתובת אתר אינטרנט"
            android:inputType="text" />

        <EditText
            android:id="@+id/etNewSupplierDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="10dp"
            android:ems="10"
            android:gravity="center_horizontal|center_vertical"
            android:hint="פרטים נוספים"
            android:inputType="text" />

        <ToggleButton
            android:id="@+id/tbNewSupplierHome"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="20dp"
            android:layout_weight="0"
            android:background="@drawable/buttons"
            android:textColor="#ffffff"
            android:textOff="ספק מקומי"
            android:textOn="ספק ביבוא"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnNewSupplierSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="20dp"
            android:layout_weight="0"
            android:background="@drawable/buttons"
            android:text="אשר"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>
</LinearLayout>