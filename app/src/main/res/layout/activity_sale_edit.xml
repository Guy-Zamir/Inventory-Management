<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SaleEditActivity">

    <Button
        android:id="@+id/btnSaleEditHeader"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center|center_horizontal|center_vertical"
        android:layout_marginTop="15dp"
        android:background="@drawable/headers"
        android:gravity="center|center_horizontal|center_vertical"
        android:text="עריכת מכירה"
        android:textColor="#ffffff"
        android:textSize="22sp"
        android:textStyle="bold" />

    <DatePicker
        android:id="@+id/dpSaleEditDate"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:calendarViewShown="false"
        android:datePickerMode="spinner"
        android:gravity="center|center_horizontal|center_vertical" />

    <LinearLayout
        android:layout_width="375dp"
        android:layout_height="55dp"
        android:layout_gravity="center|center_horizontal|center_vertical"
        android:layout_marginTop="20dp"
        android:gravity="center|center_horizontal|center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvSaleEditCompany"
            android:layout_width="275dp"
            android:layout_height="37dp"
            android:layout_weight="1"
            android:gravity="bottom|center|center_horizontal|center_vertical"
            android:text="שם החברה:"
            android:textColor="#000000"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/etSaleEditCompany"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:ems="10"
            android:gravity="start"
            android:inputType="textPersonName" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="375dp"
        android:layout_height="50dp"
        android:layout_gravity="center|center_horizontal|center_vertical"
        android:layout_marginTop="20dp"
        android:gravity="center|center_horizontal|center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvSaleEditID"
            android:layout_width="275dp"
            android:layout_height="37dp"
            android:layout_weight="1"
            android:gravity="bottom|center|center_horizontal|center_vertical"
            android:text="מספר חשבונית:"
            android:textColor="#000000"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/etSaleEditID"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:ems="10"
            android:gravity="start"
            android:inputType="textPersonName" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="375dp"
        android:layout_height="50dp"
        android:layout_gravity="center|center_horizontal|center_vertical"
        android:layout_marginTop="20dp"
        android:gravity="center|center_horizontal|center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvSaleEditWeight"
            android:layout_width="275dp"
            android:layout_height="37dp"
            android:layout_weight="1"
            android:gravity="bottom|center|center_horizontal|center_vertical"
            android:text="משקל החבילה:"
            android:textColor="#000000"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/etSaleEditWeight"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:ems="10"
            android:gravity="start"
            android:inputType="numberDecimal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="375dp"
        android:layout_height="50dp"
        android:layout_gravity="center|center_horizontal|center_vertical"
        android:layout_marginTop="20dp"
        android:gravity="center|center_horizontal|center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvSaleEditSum"
            android:layout_width="275dp"
            android:layout_height="37dp"
            android:layout_weight="1"
            android:gravity="bottom|center|center_horizontal|center_vertical"
            android:text="סכום המכירה:"
            android:textColor="#000000"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/etSaleEditSum"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:ems="10"
            android:gravity="start"
            android:inputType="numberDecimal" />
    </LinearLayout>

    <Button
        android:id="@+id/btnSaleEditSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        android:layout_weight="0"
        android:background="@drawable/buttons"
        android:clickable="true"
        android:text="אשר"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold" />

</LinearLayout>