<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BuyEditActivity">

    <Button
        android:id="@+id/btnBuyEditHeader"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center|center_horizontal|center_vertical"
        android:layout_marginTop="15dp"
        android:background="@color/colorPrimary"
        android:gravity="center|center_horizontal|center_vertical"
        android:text="עריכת קנייה"
        android:textColor="#ffffff"
        android:textSize="22sp"
        android:textStyle="bold" />

    <DatePicker
        android:id="@+id/dpBuyEditDate"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:calendarViewShown="false"
        android:datePickerMode="spinner"
        android:gravity="center|center_horizontal|center_vertical" />

    <LinearLayout
        android:layout_width="375dp"
        android:layout_height="55dp"
        android:layout_gravity="center|center_horizontal|center_vertical"
        android:gravity="center|center_horizontal|center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvBuyEditSupplier"
            android:layout_width="275dp"
            android:layout_height="37dp"
            android:layout_weight="1"
            android:gravity="bottom|center|center_horizontal|center_vertical"
            android:text="שם הספק:"
            android:textColor="#000000"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/etBuyEditSupplier"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:ems="10"
            android:gravity="start"
            android:inputType="textPersonName" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="375dp"
        android:layout_height="50dp"
        android:layout_gravity="center|center_horizontal|center_vertical"
        android:layout_marginTop="10dp"
        android:gravity="center|center_horizontal|center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvBuyEditID"
            android:layout_width="275dp"
            android:layout_height="37dp"
            android:layout_weight="1"
            android:gravity="bottom|center|center_horizontal|center_vertical"
            android:text="מספר אסמכתא:"
            android:textColor="#000000"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/etBuyEditID"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:ems="10"
            android:gravity="start"
            android:inputType="textPersonName" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="375dp"
        android:layout_height="50dp"
        android:layout_gravity="center|center_horizontal|center_vertical"
        android:layout_marginTop="10dp"
        android:gravity="center|center_horizontal|center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvBuyEditPrice"
            android:layout_width="275dp"
            android:layout_height="37dp"
            android:layout_weight="1"
            android:gravity="bottom|center|center_horizontal|center_vertical"
            android:text="מחיר לקראט:"
            android:textColor="#000000"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/etBuyEditPrice"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:ems="10"
            android:gravity="start"
            android:inputType="numberDecimal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="375dp"
        android:layout_height="50dp"
        android:layout_gravity="center|center_horizontal|center_vertical"
        android:layout_marginTop="10dp"
        android:gravity="center|center_horizontal|center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvBuyEditWeight"
            android:layout_width="275dp"
            android:layout_height="37dp"
            android:layout_weight="1"
            android:gravity="bottom|center|center_horizontal|center_vertical"
            android:text="משקל החבילה:"
            android:textColor="#000000"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/etBuyEditWeight"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:ems="10"
            android:gravity="start"
            android:inputType="numberDecimal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="375dp"
        android:layout_height="50dp"
        android:layout_gravity="center|center_horizontal|center_vertical"
        android:layout_marginTop="10dp"
        android:gravity="center|center_horizontal|center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvBuyEditDoneWeight"
            android:layout_width="325dp"
            android:layout_height="37dp"
            android:layout_weight="1"
            android:gravity="bottom|center|center_horizontal|center_vertical"
            android:text="משקל אחרי עבודה:"
            android:textColor="#000000"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/etBuyEditDoneWeight"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:ems="10"
            android:gravity="start"
            android:inputType="numberDecimal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="375dp"
        android:layout_height="50dp"
        android:layout_gravity="center|center_horizontal|center_vertical"
        android:layout_marginTop="10dp"
        android:gravity="center|center_horizontal|center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvBuyEditWage"
            android:layout_width="300dp"
            android:layout_height="37dp"
            android:layout_weight="1"
            android:gravity="bottom|center|center_horizontal|center_vertical"
            android:text="שכר עבודה:"
            android:textColor="#000000"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/etBuyEditWage"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:ems="10"
            android:gravity="start"
            android:inputType="numberDecimal" />

    </LinearLayout>

    <CheckBox
        android:id="@+id/cbBuyEditPolish"
        android:layout_width="375dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center|center_horizontal|center_vertical"
        android:layout_marginTop="15dp"
        android:gravity="center|center_horizontal|center_vertical"
        android:scrollbarSize="6sp"
        android:text="מלוטש"
        android:textSize="20sp" />

    <CheckBox
        android:id="@+id/cbBuyEditDone"
        android:layout_width="375dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center|center_horizontal|center_vertical"
        android:layout_marginTop="15dp"
        android:gravity="center|center_horizontal|center_vertical"
        android:scrollbarSize="6sp"
        android:text="חבילה גמורה"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnBuyEditSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        android:layout_weight="0"
        android:background="@color/colorPrimary"
        android:clickable="true"
        android:text="אשר"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold" />

</LinearLayout>